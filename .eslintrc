{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "mongo": true,
    "node": true
  },
  "rules": {
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": false }],
    "comma-dangle": ["warn", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "consistent-return": "off",
    "curly": "error",
    "global-require": "error",
    "indent":["error", "tab"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-unused-vars": ["error", {
      "vars": "local",
      "args": "none"
    }],
    "no-var": "error",
    "prefer-const": "error",
    "prefer-destructuring": ["warn", { "array": true, "object": true }],
    "space-unary-ops": [
      2, {
        "words": true,
        "nonwords": false,
        "overrides": {
          "new": false,
          "++": true
        }
  }]
  }
}